				p.row
					.col-md-6
						h3 Create your income list
						img.img-responsive(src="/images/incomes.png",alt="income list")
						
					.col-md-6
						h3 Create your expediture list
						img.img-responsive(src="/images/expediture.png",alt="expediture list")
				
