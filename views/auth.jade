extends ./index.jade

block content
	.col-md-9.col-md-offset-3
	h1.text-center= title
	if info.length
		.alert.alert-info= info
	if register
		form.form-horizontal(method="post")
			.form-group
				label.control-label.col-md-3 Username
				.col-md-9
					input.form-control(type="text",name="username")
			.form-group
				label.control-label.col-md-3 Email
				.col-md-9
					input.form-control(type="email",name="email")
			.form-group
				label.control-label.col-md-3 Password
				.col-md-9
					input.form-control(type="password",name="password")
			.form-group
				.col-md-9.col-md-offset-3
					button.btn.btn-primary(type="submit") Register
	else if login
		form.form-horizontal(method="post",action="/login")
			.form-group
				label.control-label.col-md-3 Username
				.col-md-9
					input.form-control(type="email",name="username")
			.form-group
				label.control-label.col-md-3 Password
				.col-md-9
					input.form-control(type="password",name="password")
			.form-group
				.col-md-9.col-md-offset-3
					button.btn.btn-primary(type="submit") Log In